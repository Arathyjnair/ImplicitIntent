<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".code"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:id="@+id/camra">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"

            android:text="CAMERA"
            android:textSize="35dp"
            android:textColor="#df1414"
            android:onClick="cmraclick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/phne"
        android:layout_below="@+id/camra">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:textSize="35dp"
            android:layout_marginTop="45dp"
            android:textColor="#df1414"
            android:onClick="phnclick"

            />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/sms"
    android:layout_below="@+id/phne"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:textSize="35dp"
        android:layout_marginTop="45dp"
        android:textColor="#df1414"
        android:onClick="smsclick"


        />

</LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:id="@+id/web"
       android:layout_below="@+id/sms">
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="WEB"
           android:textSize="35dp"
           android:layout_marginTop="45dp"
           android:textColor="#df1414"
           android:onClick="webclick"

           />
   </LinearLayout>
</RelativeLayout>